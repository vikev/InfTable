<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.vikev.android.inftable"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="eu.vikev.android.inftable.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.vikev.android.inftable.activities.UpdateActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="eu.vikev.android.inftable.activities.AllCoursesActivity"
            android:label="@string/title_activity_all_courses" >
        </activity>
        <activity
            android:name="eu.vikev.android.inftable.activities.CourseActivity"
            android:label="@string/title_activity_course" >
        </activity>
        <activity
            android:name="eu.vikev.android.inftable.activities.TimetableActivity"
            android:label="@string/title_activity_timetable" >
        </activity>
    </application>

</manifest>