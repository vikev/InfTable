<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_day_scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/activity_day_LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="showAllCoursesActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/show_all_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_show_all_courses"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/show_all_courses_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_show_all_courses_subtitle"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:onClick="showAllCoursesActivity"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/update_database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_show_all_courses"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/update_database_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_show_all_courses_subtitle"
                android:textSize="16sp" />
            
        </LinearLayout>
    </LinearLayout>

</ScrollView>